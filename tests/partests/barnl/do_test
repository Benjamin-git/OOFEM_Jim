# determine oofem version to use
if [ -f ../../../bin/Debug/oofem ]
then
OOFEM=../../../bin/Debug/oofem
elif [ -f  ../../../bin/Release/oofem ]
then  
OOFEM=../../../bin/Release/oofem
else
echo "oofem executable not found" >> ../result
fi

# determine poofem version to use
if [ -f ../../../bin/Debug/poofem ]
then
POOFEM=../../../bin/Debug/poofem
elif [ -f  ../../../bin/Release/poofem ]
then  
POOFEM=../../../bin/Release/poofem
else
echo "poofem executable not found" >> ../result
fi

ln -s $OOFEM  ./oofem
ln -s $POOFEM ./poofem

./oofem -f barnl.oofem.in
../../../tools/checker -f barnl.oofem.in >> ../result
mpirun -np 4 ./poofem -f barnl.oofem.in -ksp_rtol 1.e-15
for i in barnl.oofem.in??; do ../../../tools/checker -f $i; done >> ../result
mpirun -np 2 ./poofem -f barnl2.oofem.in -ksp_rtol 1.e-15
for i in barnl2.oofem.in??; do ../../../tools/checker -f $i; done >> ../result

rm *.oofem.out
rm *.oofem.out.*

rm oofem
rm poofem